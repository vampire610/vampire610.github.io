<div class="page-current">
    <div class="prev">
        <% if (page.current != 1) { %>
        <a href="<%- url_for(page.prev_link) %>">
            <span class="page-num">
                <i class="fa-solid fa-caret-left fa-fw"></i>
            </span>
        </a>
        <% } %>
    </div>
    <div class="page-index">
        <% if (page.current != 1) { %>
        <span>
            <% if (page.current - 3 >= 1) { %>
            <a href="<%- config.root %>"><span class="page-num">1</span></a>
            <span class="page-omit">...</span>
            <% } %>
            <% if (page.current - 2 >= 1) { %>
                <% if (page.current - 2 == 1) { %>
                <a href="<%- config.root %>">
                    <span class="page-num">1</span>
                </a>
                <% } %>
                <% if (page.current - 2 != 1) { %>
                <a href="<%- url_for("page/" + (page.current - 2)) %>">
                    <span class="page-num">
                        <%= page.current - 2 %>
                    </span>
                </a>
                <% } %>
            <% } %>
            <a href="<%- url_for(page.prev_link) %>">
                <span class="page-num">
                    <%= page.prev %>
                </span>
            </a>
        </span>
        <% } %>
        <span class="current">
            <%= page.current %>
        </span>
        <% if (page.current != page.total) { %>
        <span>
            <a href="<%- url_for(page.next_link) %>">
                <span class="page-num">
                    <%= page.next %>
                </span>
            </a>
            <% if (page.current + 2 <= page.total) { %>
            <a href="<%- url_for("page/" + (page.current + 2)) %>">
                <span class="page-num">
                    <%= page.current + 2 %>
                </span>
            </a>
            <% } %>
            <% if (page.current + 3 <= page.total) { %>
            <span class="page-omit">...</span>
            <a href="<%- url_for("page/" + page.total) %>">
                <span class="page-num">
                    <%= page.total %>
                </span>
            </a>
            <% } %>
        </span>
        <% } %>
    </div>
    <div class="next">
        <% if (page.current != page.total) { %>
        <a href="<%- url_for(page.next_link) %> ">
            <span class="page-num">
                <i class="fa-solid fa-caret-right fa-fw"></i>
            </span>
        </a>
        <% } %>
    </div>
</div>
